{
    "name": "@theoparis/config",
    "version": "1.0.0",
    "description": "F*ck the config",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist",
        "tsc": "tsc --locale zh-cn --pretty",
        "build": "pnpm run tsc -- -P tsconfig.json",
        "build:prod": "pnpm run tsc -- -P tsconfig.prod.json",
        "build:test": "pnpm run tsc -- -P tsconfig.test.json",
        "pretest": "pnpm run clean && pnpm run build:test",
        "test": "ava dist/test/**/*.{spec,e2e}.js",
        "lint": "eslint **/*.ts",
        "lint:fix": "pnpm run lint -- --fix",
        "prepublishOnly": "pnpm run lint:fix && pnpm run test && pnpm run build:prod"
    },
    "keywords": [
        "typescript",
        "config",
        "easy-to-use",
        "parser",
        "serializer",
        "json",
        "yml",
        "yaml",
        "ini",
        "toml",
        "json5",
        "hjson"
    ],
    "engines": {
        "node": ">=6"
    },
    "files": [
        "dist",
        "lib"
    ],
    "author": "Theo Paris <theoparisdesigns@gmail.com>",
    "repository": {
        "type": "git",
        "url": "git@github.com:creepinson/ftconfig.git"
    },
    "bugs": {
        "url": "https://github.com/creepinson/ftconfig/issues"
    },
    "homepage": "https://github.com/creepinson/ftconfig#readme",
    "license": "MIT",
    "yVersion": "2.1.25",
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@commitlint/lint": "^11.0.0",
        "@iarna/toml": "^2.2.5",
        "@types/find-up": "^2.1.1",
        "@types/hjson": "^2.4.2",
        "@types/ini": "^1.3.30",
        "@types/js-yaml": "^3.12.5",
        "@types/json5": "0.0.30",
        "@types/make-dir": "^1.0.3",
        "@types/node": "^14.14.13",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "ava": "^3.14.0",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.2.0",
        "find-up": "^5.0.0",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "tslib": "^2.0.3",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "hjson": "^3.2.2",
        "ini": "^1.3.8",
        "joi": "^17.3.0",
        "js-yaml": "^3.14.1",
        "json5": "^2.1.3",
        "make-dir": "^3.1.0"
    },
    "peerDependencies": {
        "@iarna/toml": "^2.2.5",
        "hjson": "^3.2.2",
        "ini": "^2.0.0",
        "joi": "^17.3.0",
        "js-yaml": "^3.14.1",
        "json5": "^2.1.3"
    }
}
